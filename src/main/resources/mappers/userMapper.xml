<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.user.dao.UserDAO">
 	<select id="existLoginId" parameterType="string" resultType="boolean">
 		SELECT
 			COUNT(*)
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>
 	
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO `user`
 		(
 			`loginId`
 			, `password`
 			, `name`
 			, `email`
 			, `profileUrl`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{loginId}
 			, #{password}
 			, #{name}
 			, #{email}
 			, null
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<select id="selectUserByIdPassword" parameterType="map" resultType="com.sns.user.model.User">
 		SELECT
 			`id`
 			, `loginId`
 			, `password`
 			, `name`
 			, `email`
 			, `profileUrl`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 			AND
 			`password` = #{password}
 	</select>
 	
 	<select id="selecetUserById" resultType="com.sns.user.model.User">
 		SELECT
 			`id`
 			, `loginId`
 			, `password`
 			, `name`
 			, `email`
 			, `profileUrl`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`user`
 		WHERE
 			`id` = #{id}
 	</select>
 </mapper>